{
  "version": 2,
  "builds": [
    {
      "src": "nextjs-app/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/nextjs-app/$1"
    }
  ],
  "env": {
    "NLTK_DATA": "/tmp/nltk_data"
  }
}
